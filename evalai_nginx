server {
    listen 80;
    server_name bpc.opencv.org;
    return 301 https://$host$request_uri;  # Redirect all HTTP traffic to HTTPS
}

server {
    server_name bpc.opencv.org;

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/bpc.opencv.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/bpc.opencv.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
    
    # ########################################################

    # dvtools next js site
    location / {
        proxy_pass http://localhost:8888;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;

        # Add headers to forward the client's IP address
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Serve static files
    location /api/static/ {
        alias /var/www/bpc.opencv.org/static/;  # Updated path
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }

    # # Serve media files (if applicable)
    # location /api/media/ {
    #     alias /home/ubuntu/veb/EvalAI/media/;
    #     expires 30d;
    #     add_header Cache-Control "public, max-age=2592000";
    # }
    # django backend
    location ^~ /api/ {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;

        # Add headers to forward the client's IP address
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

}
